<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TTFL Follow-Up{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/favicon.ico') }}"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <div id="app"></div>
    {% endblock %}
    {% block javascripts %}
        <script>
            window.nbaYear = {{ nbaYear }}
            window.isNbaPlayoffs = {{ isNbaPlayoffs ? 'true' : 'false' }}
        </script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
